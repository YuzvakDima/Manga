@model Manga

<div class="manga-details-container">
    <div class="manga-cover-container">
        <img src="@Model.CoverUrl" alt="@Model.Title" class="manga-cover" />
    </div>

    <div class="manga-info-container">
        <h1>@Model.Title</h1>
        <p><strong>Автор:</strong> @Model.Author</p>
        <p><strong>Рік випуску:</strong> @Model.ReleaseYear</p>
        <p><strong>Жанр:</strong> @Model.Genres</p>
        <p><strong>Статус:</strong> @Model.Status</p>
    </div>

    <div class="manga-description">
        <h2>Опис</h2>
        <p>@Model.Description</p>
    </div>
    <h3>Коментарі:</h3>
    @foreach (var comment in Model.Comments)
    {
        <div>
            <p><strong>@comment.User</strong> (@comment.CreatedAt):</p>
            <p>@comment.Content</p>
        </div>
    }

    <form asp-action="AddComment" asp-controller="Mangas" method="post">
        <input type="hidden" name="mangaId" value="@Model.Id" />
        <textarea name="content" required></textarea>
        <button type="submit">Додати коментар</button>
    </form>



<form asp-action="AddRating" method="post">
    <input type="hidden" name="mangaId" value="@Model.Id" />
    <label for="rating">Rating:</label>
    <select name="ratingValue" id="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
    </select>
    <button type="submit">Submit Rating</button>
</form>

<div>
        <strong>Average Rating:</strong> @Model.AverageRating
</div>




</div>
