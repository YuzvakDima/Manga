@model IEnumerable<LAB1.Models.Tag>

@{
    ViewData["Title"] = "Create Tag";
}

<h1>Додати тег</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="name">Назва тегу</label>
                <input type="text" class="form-control" id="name" name="name" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h3 class="mt-5">Список тегів</h3>
<table class="table mt-3">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in ViewBag.Tags)
        {
            <tr>
                <td>@tag.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@tag.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Видалити</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
